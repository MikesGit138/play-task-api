# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# This get method is a check
GET  /check   controllers.HomeController.checker(request: Request)

# Handling more route to get hand of it 
GET /handle/:myName     controllers.HomeController.handler(myName: String)

# task routes
GET /tasks  controllers.HomeController.getTasks

POST /create-task controllers.HomeController.createTask(request: Request)

PUT /update-task/:id controllers.HomeController.updateTask(request : Request, id: Int)

DELETE /del-task/:id controllers.HomeController.deleteTask(id: Int)

PUT /complete-task/:id controllers.HomeController.completeTask(id: Int)

#user routes
GET /users controllers.HomeController.getUsers
POST /create-user controllers.HomeController.createUser(request: Request)
POST /login controllers.HomeController.userLogin(request: Request)